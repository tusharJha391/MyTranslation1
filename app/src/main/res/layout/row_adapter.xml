<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cv">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/save_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo text checking"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:padding="10dp" />
        <TextView
            android:id="@+id/source_lang_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/save_input_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Demo is writing"
            android:gravity="end"
            android:padding="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" />
        <TextView
            android:id="@+id/save_output_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/save_input_text"
            android:text="demo translation"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/dest_lang_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/save_output_text"
            android:layout_below="@+id/source_lang_row"
            android:text="hh"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:padding="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_delete_black_24dp"/>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"/>-->


    </RelativeLayout>


</android.support.v7.widget.CardView>